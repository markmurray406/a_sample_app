<h2>Sign up</h2>

<%#= Added simple in front of form_for and :html ... horizontal'} , see omrails customizing devise, 05:00 %>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

	<%#= Ran migration to add name to db, now making it visible in new form , see omrails customizing devise, 10:00 %>
  <%= f.input :name %>
  <%#= Changed email and password format , see omrails customizing devise, 03:00 %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <div class="well">
	  <%= f.submit "Sign up", class: "btn btn-primary" %>
	</div>
<% end %>

<%= render "devise/shared/links" %>
