  </div>

    <div class="span9">
    	<%#= <%= render "talents/form" %> 
			<%#= <%= render "talents/talents" %> 

			<div class="row">
				<%= render 'skills/form' %> 
			  <div class="span8">
			    <% if @occupation.skills.any? %>
			      <h3>Desired Skills (<%= @occupation.skills.count %>)</h3>
			      <ol class="skills">
			        <%= render @skills %>
			      </ol>
			    <% end %>
			  </div>
			</div>

  	</div>

</div>





	



