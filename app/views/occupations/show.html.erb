 <div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <!--Sidebar content-->
      <%#= Displaying image see omrails Paperclip, 13:00 %>
			<%= image_tag @occupation.image %>

			<p>
			  <b>Occupation:</b>
			  <%= @occupation.description %>
			  	<p>	
			  		Started by: <%= @occupation.user.name %>
